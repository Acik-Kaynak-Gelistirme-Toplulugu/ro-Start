#!/bin/bash
# Pre-commit hook to check for common issues

set -e

echo "ğŸ” Running pre-commit checks..."

# Check Rust formatting
echo "ğŸ“ Checking Rust formatting..."
if ! cargo fmt -- --check; then
    echo "âŒ Code is not formatted. Run 'cargo fmt' to fix."
    exit 1
fi

# Run clippy
echo "ğŸ” Running clippy..."
if ! cargo clippy -- -D warnings; then
    echo "âŒ Clippy found issues. Please fix them."
    exit 1
fi

# Check for common issues
echo "ğŸ” Checking for todos and fixmes..."
if git diff --cached --name-only | grep -E '\.rs$' | xargs grep -i "TODO\|FIXME" 2>/dev/null; then
    echo "âš ï¸  Found TODO/FIXME comments. Consider resolving them."
fi

# Run tests
echo "ğŸ§ª Running tests..."
if ! cargo test --quiet; then
    echo "âŒ Tests failed. Please fix them."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
